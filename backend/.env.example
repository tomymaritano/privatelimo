# Server
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/privatelimo

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt
BCRYPT_ROUNDS=10

# Email (SendGrid, Resend, etc)
EMAIL_FROM=noreply@privatelimo.com
EMAIL_API_KEY=your-email-api-key

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-id
WHATSAPP_BUSINESS_NUMBER=+1234567890

# Payment Gateways
MERCADOPAGO_ACCESS_TOKEN=your-mp-access-token
MERCADOPAGO_PUBLIC_KEY=your-mp-public-key
STRIPE_SECRET_KEY=your-stripe-secret
STRIPE_PUBLIC_KEY=your-stripe-public
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-key

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
AWS_BUCKET_NAME=privatelimo-uploads

# Redis (for caching and real-time)
REDIS_URL=redis://localhost:6379

# Sentry (for error tracking)
SENTRY_DSN=your-sentry-dsn

# Frontend URL
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3002

# Support
SUPPORT_EMAIL=support@privatelimo.com
NO_REPLY_EMAIL=noreply@privatelimo.com